@page "/products"
@using Ecommerce.Client.Models
@using Ecommerce.Client.Services
@inject ProductService ProductService
@inject NavigationManager Navigation


<h3 class="mb-3">🛍️ All Products</h3>

@if (products == null)
{
    <p>Loading products...</p>
}
else if (products.Count == 0)
{
    <p>No products found.</p>
}
else
{
    <div class="row">
        @foreach (var p in products)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@((p.Images.FirstOrDefault() ?? "https://via.placeholder.com/300"))"
                         class="card-img-top" style="height:200px;object-fit:cover;" />
                    <div class="card-body">
                        <h5>@p.Name</h5>
                        <p class="text-muted">৳@p.Price</p>
                        <button class="btn btn-sm btn-primary" @onclick="() => ViewDetails(p.Id)">View</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<ProductDto>? products;

    protected override async Task OnInitializedAsync()
    {
        products = await ProductService.GetAllAsync();
    }

    private void ViewDetails(string? id)
    {
        if (id != null)
            Navigation.NavigateTo($"/product/{id}");
    }
}
