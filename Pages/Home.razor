@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Initialize Bootstrap Carousels
            await JSRuntime.InvokeVoidAsync("eval", "new bootstrap.Carousel(document.getElementById('heroCarousel'), { interval: 5000, ride: 'carousel' });");
            await JSRuntime.InvokeVoidAsync("eval", "new bootstrap.Carousel(document.getElementById('testimonialCarousel'), { interval: 4000, ride: 'carousel' });");
            await JSRuntime.InvokeVoidAsync("eval", "new bootstrap.Carousel(document.getElementById('brandsCarousel'), { interval: 3000, ride: 'carousel' });");

            // Initialize WOW.js (add script to _Host.cshtml: <script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>)
            await JSRuntime.InvokeVoidAsync("eval", @"
                if (typeof WOW !== 'undefined') {
                    new WOW({
                        boxClass: 'wow',
                        animateClass: 'animate__animated',
                        offset: 0,
                        mobile: true,
                        live: true
                    }).init();
                }
            ");
        }
    }
}

