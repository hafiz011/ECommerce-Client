<div class="col-lg-4 col-md-6 col-sm-12">
    <div class="card h-100 border-0 shadow-lg overflow-hidden product-card wow animate__animated animate__fadeInUp" data-wow-delay="@Delay">
        <img src="@Image" class="card-img-top" alt="@Name" style="height: 250px; object-fit: cover;">
        <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title fw-bold mb-2">@Name</h5>
            <p class="card-text text-danger fs-4 fw-bold mb-2">@Price</p>
            <div class="text-warning mb-3">
                @for (int i = 0; i < 5; i++)
                {
                    <i class="fas fa-star @(i < (int)Rating ? "" : "far")"></i>
                }
                <span class="text-muted small ms-1">(@Rating)</span>
            </div>
            @if (!string.IsNullOrEmpty(Discount) && Discount != "0%")
            {
                <span class="badge bg-success fs-6 mb-2">@Discount off</span>
            }
            <div class="mt-auto">
                <a href="#" class="btn btn-primary w-100">Add to Cart</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Image { get; set; } = "";
    [Parameter] public string Name { get; set; } = "";
    [Parameter] public string Price { get; set; } = "";
    [Parameter] public double Rating { get; set; }
    [Parameter] public string Discount { get; set; } = "";
    [Parameter] public string Delay { get; set; } = "0s";
}

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 15px;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1) !important;
        }

        .product-card .btn {
            transition: transform 0.2s ease;
            border-radius: 25px;
        }
</style>