@inherits LayoutComponentBase

<div class="d-flex admin-container" style="min-height:100vh;">

    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white p-3" style="width:250px;">
        <h5 class="mb-4">Admin Panel</h5>
        <NavMenuAdmin />
    </div>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column">

        <!-- Top Navbar -->
        <nav class="navbar navbar-light bg-white shadow-sm px-3">
            <span class="navbar-brand mb-0 h6">@Title</span>
        </nav>

        <!-- Body -->
        <main class="p-3 bg-light" style="flex-grow:1;">
            @Body
        </main>

    </div>

</div>

@code {
    [Parameter] public string Title { get; set; } = "Dashboard";
}
