@inherits LayoutComponentBase

<div class="d-flex" style="min-height:100vh;">

    <!-- Sidebar -->
    <div class="sidebar bg-primary text-white p-3" style="width:250px;">
        <h5 class="mb-4">Seller Panel</h5>
        <NavMenuSeller />
    </div>

    <!-- Main -->
    <div class="flex-grow-1 d-flex flex-column">

        <!-- Top Navbar -->
        <nav class="navbar navbar-dark bg-primary shadow-sm px-3">
            <span class="navbar-brand mb-0 h6">@Title</span>
            <button class="btn btn-light btn-sm">Logout</button>
        </nav>

        <!-- Body -->
        <main class="p-3 bg-light" style="flex-grow:1;">
            @Body
        </main>

    </div>
</div>

@code {
    [Parameter] public string Title { get; set; } = "Seller Dashboard";
}
